<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_item_datsan"
            android:layout_width="80dp"
            android:layout_height="80dp" />


        <TextView
            android:id="@+id/textview_item_datsan_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_item_datsan"
            android:text="viet"
            android:textSize="16sp" />

        <TextView

            android:id="@+id/textview_item_datsan_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_item_datsan_ten"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image_item_datsan"
            android:text="0934826442"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textview_item_datsan_thanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iamge_item_datsan_delte"
            android:layout_alignParentEnd="true"
            android:text="thanh toan"
            android:textSize="16sp"
            android:layout_alignParentRight="true" />

        <TextView

            android:id="@+id/text_item_giosan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_item_datsan"
            android:layout_below="@+id/textview_item_datsan_sdt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="giosan" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iamge_item_datsan_delte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/deleteuser" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>


