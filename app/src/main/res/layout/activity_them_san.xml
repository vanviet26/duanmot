<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:textSize="22sp"
        android:text="Thêm Sân Bóng"
        android:id="@+id/textthemsan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:background="@drawable/edt_cus"

        android:id="@+id/edt_maSan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã Sân" />

    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_cus"
        android:id="@+id/edt_loaiSan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loại Sân" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/bg_button_while"

            android:layout_weight="1"
            android:id="@+id/btn_addsan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm Sân" />

        <Button
            android:background="@drawable/bg_button_while"

            android:layout_weight="1"
            android:id="@+id/btn_cancelSan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa Trắng" />
    </LinearLayout>
</LinearLayout>