<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".listactivity.ListThongKe">
    <View
        android:layout_gravity="center"
        android:background="@drawable/thong"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/textview_ngaythongke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/textview_chuathanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/textview_thangthongke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/black"

        android:textSize="20sp"
        android:id="@+id/textview_namthongke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>