<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cuspinnerItem"
        android:layout_toLeftOf="@+id/image_itemspinner_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_itemspinner_giosan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/pitch" />

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/textview_itemspinner_loaisan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="Loại Sân"
            android:textSize="18sp" />
    </LinearLayout>
    <ImageView
        android:layout_marginTop="4dp"

        android:id="@+id/image_itemspinner_down"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_drop_down_circle_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>